{
  "emmet.syntaxProfiles": {
    "vue-html": "html",
    "vue": "html",
    "vetur.validation.template": true
  },
  "vetur.format.defaultFormatter.html": "prettyhtml", // prettyhtml   js-beautify-html
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_line_length": "100",
      "wrap_attributes": "force-aligned"
      // "singleQuote": false,
    },
    "prettyhtml": {
      "printWidth": 140,
      "singleQuote": false,
      "wrapAttributes": false
    },
    "prettier": {
      // 使用单引号
      "singleQuote": true,
      "semi": false,
      // 无尾随逗号
      "trailingComma": "none",
      // 箭头函数单个参数不加分号
      "arrowParens": "avoid"
    }
  },
  "vetur.validation.template": true,
  "prettier.printWidth": 180,
  // "prettier.disableLanguages": [],
  "prettier.semi": false, // false
  "prettier.singleQuote": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false
    // "suppressResultsExplorerNotice": false,
    // "suppressShowKeyBindingsNotice": true
  },
  "breadcrumbs.enabled": true,
  "vetur.format.defaultFormatter.js": "prettier", // vscode-typescript  prettier
  // "gitlens.views.lineHistory.enabled": true,
  // "debug.console.fontSize": 14,
  // 让函数名和后面的括号之间加个空格
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features" // esbenp.prettier-vscode  vscode.typescript-language-features(先用着，为了空格化函数)
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.settings.enableNaturalLanguageSearch": false,
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur" // octref.vetur   esbenp.prettier-vscode
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.startupEditor": "newUntitledFile",
  "scm.alwaysShowRepositories": true,
  "bracketPairColorizer.consecutivePairColors": ["()", "[]", "{}", ["Gold", "Orchid", "LightSkyBlue"], "Red"],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // HookyQR.beautify  esbenp.prettier-vscode后
  },
  "git.alwaysSignOff": true,
  "eslint.validate": ["vue", "html", "javascript", "typescript", "javascriptreact", "typescriptreact"],
  // 保存时代码自动格式化
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.format.enable": true,
  "workbench.colorTheme": "Monokai Dimmed",
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  // 指定wxml的格式化
  "minapp-vscode.wxmlFormatter": "prettyHtml",
  "minapp-vscode.disableAutoConfig": true
  // "gitlens.gitCommands.skipConfirmations": [
  //   "fetch:command",
  //   "stash-push:command"
  // ],
}
